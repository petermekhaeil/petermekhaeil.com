---
import { getCollection } from 'astro:content';
import { slug } from '../slug';
import BaseLayout from '../layouts/base.astro';

type Props = Awaited<ReturnType<typeof getStaticPaths>>[number]['props'];

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');

  return blogEntries.map((post) => ({
    params: { slug: slug(post.data.title) },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.pubDate).toLocaleDateString('en-us', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  subTitle={formattedDate}>
  <article class="text-gray-800 prose prose-gray mb-16">
    <h1 class="text-2xl font-bold mb-1">
      {post.data.title}
    </h1>
    <time class="text-gray-500 m-0 text-sm">{formattedDate}</time>
    <Content />
  </article>
</BaseLayout>
