---
import BaseLayout from '../layouts/base.astro';
import Project from '../components/Project.astro';
import projects from '../_data/projects.json';
import projects_github from '../_data/projects_github.json';

const pageDescription =
  'Projects that showcase different web technologies and how they can be used to solve different challenges';
---

<BaseLayout
  title="Projects"
  description={pageDescription}
  subTitle={pageDescription}>
  <article
    class="prose prose-zinc mx-auto mt-4 mb-16 prose-h2:mt-0 prose-a:text-orange-500 hover:prose-a:text-orange-500 dark:prose-dark dark:prose-a:text-orange-400 dark:hover:prose-a:text-orange-400 lg:prose-lg lg:mt-10">
    <h2>Projects</h2>

    <div class="mt-8 mb-8 not-prose">
      <ul role="list" class="grid grid-cols-1 gap-x-12 gap-y-12">
        {
          projects.map((project) => (
            <Project
              name={project.name}
              description={project.description}
              links={project.links}
            />
          ))
        }
      </ul>
    </div>

    <h2>Open Source</h2>

    <p>
      Projects that showcase different web technologies and how they can be used
      to solve different challenges.
    </p>

    <div class="mt-8 mb-8 not-prose">
      <ul role="list" class="grid grid-cols-1 gap-x-12 gap-y-12">
        {
          projects_github.map((project) => (
            <Project
              name={project.name}
              description={project.description}
              links={project.links}
            />
          ))
        }
      </ul>
    </div>
  </article>
</BaseLayout>
