layout: base.njk
eleventyNavigation:
  key: Work
  order: 300
---

<div class="mx-auto mt-4 mb-16 lg:mt-10">
  <p class="mb-12 text-gray-600 dark:text-gray-400">
    Showcase of sites and companies I have worked with.
  </p>

  <ul class="list-none space-y-8">
    {% for site in sites %}
    <li>
      <a href="{{ site.url | url }}">
        <h3
          class="mb-2 w-full text-lg font-medium text-indigo-700 dark:text-gray-100 md:text-xl"
        >
          {{ site.name }}
        </h3>
      </a>
      <p class="text-gray-600 dark:text-gray-400">{{ site.description }}</p>
    </li>
    {% endfor %}
  </ul>
</div>
