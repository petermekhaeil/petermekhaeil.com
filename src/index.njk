<ul class="list-none">
  {% for post in collections.posts | reverse %}
    <li style="margin-bottom: 32px">
      <a href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
      <p style="margin: 0"><small>{{ post.data.date | htmlDateString }}</small></p>
      <p style="margin: 0">{{ post.data.description }}</p>
      <p style="margin: 0">
        {% for tag in post.data.tags %}
          <i><small style="font-size:14px">#{{ tag }}</small></i>
        {% endfor %}
      </p>
    </li>
  {% endfor %}
</ul>

<h2>Projects</h2>
<ul class="list-none">
  {% for repo in github %}
  <li>
    <a href="{{ repo.url | url }}" target="_blank" rel="noopener" title="{{repo.name}}">{{ repo.name }}</a>
    <p style="margin: 0">{{repo.description}}</p>
  </li>
  {% endfor %}
</ul>

<h2>Sites</h2>
<ul class="list-none">
  {% for site in sites %}
  <li>
    <a href="{{ site.url | url }}" target="_blank" rel="noopener" title="{{site.name}}">{{ site.name }}</a>
    <p style="margin: 0">{{site.description}}</p>
  </li>
  {% endfor %}
</ul>

<hr />

