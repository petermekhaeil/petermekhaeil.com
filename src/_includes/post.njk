---
layout: base.njk
---

<style type="text/css">
  {% tweetStyles %}
</style>
<style>
  .tweet-header .tweet-author-name {
    color: #1c2022 !important;
  }
  .tweet-header .tweet-author-handle {
    color: #697882 !important;
  }
  .tweet-body {
    margin-top: 16px;
    margin-bottom: 16px;
  }
  .tweet-body video {
    border-radius: 16px;
    margin-top: 12px;
  }
  .tweet-card {
    margin: 0 auto;
  }
</style>

<article
  class="prose prose-zinc mx-auto mt-4 mb-16 prose-h2:mt-0 prose-a:text-orange-500 hover:prose-a:text-orange-500 dark:prose-dark dark:prose-a:text-orange-400 dark:hover:prose-a:text-orange-400 lg:prose-lg lg:mt-10">
  {% if title %}
  <h2>{{ title }}</h2>
  {% endif %}

  <div class="mb-2">
    {% if date %}
    <p class="text-zinc-400 dark:text-zinc-500" style="margin: 0">
      {{ date | toDate_MMMM_DD_YYYY }}
    </p>
    {% endif %} {% if title and not hideReadingTime %}
    <p class="text-zinc-400 dark:text-zinc-500" style="margin: 0">
      {{ content | emojiReadTime }}
    </p>
    {% endif %}
  </div>

  {% if toc %} {{ content | toc | safe }} {% endif %} {{ content | safe }}

  <!-- Comment Section -->
  {% if devto %}
  <div>
    <p class="text-center">
      <a href="{{ devto }}">Leave a comment</a>
    </p>
  </div>
  {% endif %}
</article>
