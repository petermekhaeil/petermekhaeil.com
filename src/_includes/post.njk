---
layout: base.njk
---
<article class="mt-4 lg:mt-10 mb-4 prose prose-sm sm:prose lg:prose-lg mx-auto dark:prose-dark">
  <h2>{{ title }}</h2>
  {% if date %}
    <div class="mb-2">
     <p class="text-sm" style="margin:0">{{ date | htmlDateString }}</p>
     <p class="text-sm" style="margin:0">{{ content | emojiReadTime }}</p>
    </div>
  {% endif %}
  {% if toc %}
    {{ content | toc | safe }}
  {% endif %}
  {{ content | safe }}
  {% if devto %}
    <div>
      <p class="text-center">Leave a comment on <a href={{ devto }}>Dev.to</a>.</p>
    </div>
  {% endif %}
</article>