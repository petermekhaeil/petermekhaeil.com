---
layout: base.njk
---
<article class="mt-0 lg:mt-10 mb-4 prose sm:prose-lg mx-auto dark:prose-dark">
  {% if title %}<h2 class="mt-4 lg:mt-10">{{ title }}</h2>{% endif %}

  <div class="mb-2">
    {% if date %}
      <p class="text-sm" style="margin:0">{{ date | htmlDateString }}</p>
    {% endif %}
    {% if title and not hideReadingTime %}
     <p class="text-sm" style="margin:0">{{ content | emojiReadTime }}</p>
    {% endif %}
  </div>
  {% if toc %}
    {{ content | toc | safe }}
  {% endif %}
  {{ content | safe }}
  {% if devto %}
    <div>
      <p class="text-center">Leave a comment on <a href={{ devto }}>Dev.to</a>.</p>
    </div>
  {% endif %}
</article>