<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% include 'seo.njk' %}
    <link rel="stylesheet" href="{{ '/compiled.css' | url }}">
    <style>
     a { color: #111827; }
    </style>
  </head>
  <body class="antialiased text-gray-900 px-4 py-10 max-w-3xl mx-auto sm:px-6 sm:py-12 lg:max-w-4xl lg:py-6 lg:px-6 xl:max-w-6xl">

    <header class="pt-6 pb-6 border-b border-gray-200">
      <div class="container px-4 mx-auto flex flex-wrap justify-between items-center">
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-semibold"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
        <nav class="mt-2 sm:mt-0">
          {% set navPages = collections.all | eleventyNavigation %}
          <ul class="flex items-center">
          {%- for entry in navPages %}
            <li class="mr-6 text-md lg:text-2xl {% if entry.url == page.url %} font-semibold underline {% endif %}">
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
            <li class="mr-6">
              <a href="https://github.com/petermekhaeil" title="GitHub" target="_blank" rel="noopener" class="text-gray-400 hover:text-gray-500 transition-colors duration-200">
                <span class="sr-only">Connect with Peter on GitHub</span>
                {% include 'icon-github.njk' %}
              </a>
            </li>
            <li class="mr-6">
              <a href="https://twitter.com/PMekhaeil" title="Twitter" target="_blank" rel="noopener" class="text-gray-400 hover:text-gray-500 transition-colors duration-200">
                <span class="sr-only">Connect with Peter on GitHub</span>
                {% include 'icon-twitter.njk' %}
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      {{ content | safe }}
    </main>

    <footer></footer>
    <img src="https://pmekh.goatcounter.com/count?p={{ page.url }}" />
  </body>
</html>