<title>{{metadata.title }} | {{ title | safe or metadata.title | safe }}</title>
<meta name="description" content="{{ metadata.description | safe }}">

{% set canonicalUrl = metadata.url + page.url %}
<link rel="canonical" href="{{ canonicalUrl }}">

<meta property="og:type" content="blog">
<meta property="og:url" content="{{ canonicalUrl }}">
<meta property="og:title" content="{{ title | safe }}">
<meta property="og:description" content="{{ metadata.description | safe }}">
<meta property="og:site_name" itemprop="name" content="{{ metadata.title }}">

<meta property="og:image" content="{{ metadata.image }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">

<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="@{{ metadata.title }}">
<meta name="twitter:creator" content="@{{ metadata.author.name }}">
<meta name="twitter:url" content="{{ canonicalUrl }}">
<meta name="twitter:title" content="{{ title | safe }}">
<meta name="twitter:description" content="{{ metadata.description | safe }}">
<meta name="twitter:image" content="{{ metadata.image }}">
