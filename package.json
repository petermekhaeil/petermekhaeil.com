{
  "name": "pmekh.com",
  "version": "1.0.0",
  "description": "Peter Mekhaeil's Site",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./_site && mkdir ./_site",
    "build": "NODE_ENV=production npm run clean && npm run build:copy && npm run build:css && eleventy",
    "build:css": "NODE_ENV=production postcss ./src/styles.css -o ./_site/compiled.css --config ./postcss.config.js",
    "build:copy": "cp -r ./static/* ./_site",
    "dev": "eleventy --serve"
  },
  "keywords": [],
  "author": "Peter Mekhaeil <mekhaeil.peter@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "cssnano": "^4.1.10",
    "postcss": "^8.1.7",
    "postcss-cli": "^8.3.0"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^0.3.0",
    "@tailwindcss/typography": "^0.3.1",
    "autoprefixer": "^10.0.2",
    "clean-css": "^4.2.3",
    "luxon": "^1.25.0",
    "markdown-it-attrs": "^3.0.3",
    "tailwindcss": "^2.0.1"
  }
}
